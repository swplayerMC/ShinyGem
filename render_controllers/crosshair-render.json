{
    "format_version": "1.18.20",
    "render_controllers": {
        "controller.render.sg_crosshair": {
            "geometry": "Geometry.crosshair",
            "materials": [ { "*": "Material.crosshair" } ],
            "textures": [ "Texture.crosshair" ],
            "part_visibility": [
                { "*": "v.genfx_standby" }
            ],
            "overlay_color": {
                "r": "1.0f",
                "g": "1.0f",
                "b": "1.0f",
                "a": 1.0
            },
            "is_hurt_color": {
                "r": "v.genfx_vfx_jump_reset ? 0 : 1",
                "g": "v.genfx_vfx_jump_reset ? 1 : 0",
                "b": 0,
                "a": 0.5
            },
            "filter_lighting": true,
            "ignore_lighting": true,
            "light_color_multiplier": 1.25
        }
    }
}