{
    "format_version": "1.10.0",
    "render_controllers": {
        "controller.render.sg_crosshair": {
            "arrays": {
                "textures": {
                    "Array.crosshair_colors": [ "Texture.crosshair", "Texture.crosshair_green","Texture.crosshair_red" ]
                }
            },
            "geometry": "Geometry.crosshair",
            "materials": [ { "*": "Material.crosshair" } ],
            "textures": [ "Array.crosshair_colors[v.genfx_vfx_jump_reset]" ],
            "part_visibility": [
                { "*": "v.genfx_standby" }
            ],
            "overlay_color": {
                "r": "1.0f",
                "g": "1.0f",
                "b": "1.0f",
                "a": 1.0
            },
            "is_hurt_color": {
                "r": 0.8,
                "g": 0.8,
                "b": 0.8,
                "a": "v.hurt = 1; v.genfx_vfx_jump_reset ? {1; v.jump_reset_count = v.jump_reset_count + 1; return v.jump_reset_count;} : {0; v.genfx_combo = v.genfx_combo + 1; return v.genfx_combo;}; v.genfx_vfx_jump_reset;"
            },
            "filter_lighting": true,
            "ignore_lighting": true,
            "light_color_multiplier": 1.25
        }
    }
}