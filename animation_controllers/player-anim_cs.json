{
	"format_version": "1.10.0",
	"animation_controllers": {
	    "controller.animation.player.raiz": {
	        "initial_state": "1p",
	        "states": {
	            "1p": {
	                "on_entry": ["return 0;"],
	                "animations": ["return 0;"],
	                "transitions": [
	                    {
	                        "3p": "!v.is_first_person"
	                    }
	                ]
	            },
	            "3p": {
	                "on_entry": ["v.afk = q.life_time; v.afk = math.random_integer(1, 3); t.is_afk = (q.life_time - v.afk) >= 10 && !q.is_moving;"],
					"variables": {
						"curva_de_velocidade": {
							"input": "v.velocidade",
							"remap_curve": {
								"0.0": 0.1,
								"1.875": 1.4
							}
						}
					},
	                "animations": [
	                    {
	                        "andando": "v.curva_de_velocidade; q.modified_ground_speed && (!q.is_jumping && !q.is_sprinting && q.is_on_ground)"
	                    },
	                    {
	                        "afk1": "v.afk == 1 && t.is_afk"
	                    }
	                ],
	                "transitions": [
	                    {
	                        "1p": "v.is_first_person"
	                    }
	                ]
	            }
	        }
	    },
		"controller.animation.player.combo": {
			"states": {
				"default": {
					"animations": [
						{
						    "pegou_um_combo": "v.genfx_combo >= 4"
						}
					]
				}
			}
		}
	}
}