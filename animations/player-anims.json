{
	"format_version": "1.8.0",
	"animations": {
		"animation.player.scripts": {
			"animation_length": 0.01,
			"bones": {
				"root": {
					"scale": "1; t.is_local_player = q.is_local_player; return t.is_local_player;"
				}
			}
		},
		"animation.player.camera_fix": {
			"loop": true,
			"bones": {
				"head": {
					"rotation": ["q.target_x_rotation", "q.target_y_rotation", 0]
				}
			}
		},
		"animation.player.pegou_um_combo": {
			"loop": true,
			"sound_effects": {
				"0.0": {
					"effect": "coin_combo_sfx"
				}
			}
		},
		"animation.player.andando": {
			"loop": true,
			"animation_length": 0.1,
			"bones": {
				"leftLeg": {
					"rotation": ["-math.sin(q.modified_distance_moved * (q.is_sneaking ? 60 : 35)) * 50", 0, 0]
				},
				"rightLeg": {
					"rotation": ["math.sin(q.modified_distance_moved * (q.is_sneaking ? 60 : 35)) * 50", 0, 0]
				},
				"leftArm": {
					"rotation": ["v.is_first_person ? this : math.sin(q.modified_distance_moved * (q.is_sneaking ? 60 : 35)) * 50", "this", "this"]
				},
				"rightArm": {
					"rotation": ["v.is_first_person ? this : -math.sin(q.modified_distance_moved * (q.is_sneaking ? 60 : 35)) * 50", "this", "this"]
				}
			}
		},
		"animation.player.jump_reset": {
			"loop": true,
			"animation_length": 0.4,
			"sound_effects": {
				"0.0": {
					"effect": "coin_sfx"
				}
			}
		}
	}
}