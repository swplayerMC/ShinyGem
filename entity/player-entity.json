{
    "format_version": "1.18.20",
    "minecraft:client_entity": {
        "description": {
        "identifier": "minecraft:player",
        "animations": {
            "spawning": "animation.player.spawn_setup",
            "afk_animation1": "animation.player.afk",
            "got_a_combo": "animation.player.got_a_combo",
            "combo": "controller.animation.player.combo",
            "dynamic_crosshair": "controller.animation.genfx_crosshairs",
            "crosshair_position_fix": "animation.sg_crosshair.inteiro",
            "c_main": "animation.sg_crosshair.main",
            "c_main_attacking": "animation.sg_crosshair.main_attacking",
            "c_main_controller": "controller.animation.main_crosshair",
            "c_holding_projectile": "animation.sg_crosshair.holding_projectile",
            "c_holding_pickaxe": "animation.sg_crosshair.holding_pickaxe",
            "c_holding_armor_piece": "animation.sg_crosshair.holding_armor_piece",
            "c_holding_throwers": "animation.sg_crosshair.holding_throwers",
            "c_holding_others": "animation.sg_crosshair.holding_others",
            "scripts": "animation.player.scripts",
            "zuera": "animation.player.zuera"
        },
        "scripts": {
            //"scale": "3.0",
            "scale": "0.9375",
            //"variables": {},
            "initialize": [
                "v.jump_reset_count = 0;",
                "v.genfx_combo = 0;",
                "v.genfx_crosshair_geo = 0;",
                "v.hurt = 0;",
                "variable.is_holding_right = 0.0;",
                "variable.is_blinking = 0.0;",
                "variable.last_blink_time = 0.0;",
                "variable.hand_bob = 0.0;"
            ], 
            "pre_animation": [
                //"t.rotation = Math.mod(360 + Math.mod(Math.atan2(query.position_delta(0), query.position_delta(2)) + query.head_y_rotation(0), 360), 360);",
                
                //"t.is_local_player -> q.is_local_player",

                "t.genfx_jreset_speed = q.ground_speed < 3 && q.vertical_speed > 1 ? 1 : 0;",
                
                "v.genfx_vfx_jump_reset = q.is_jumping && (t.genfx_jreset_speed) ? 1 : 0;",
                
                "v.genfx_harmor = q.equipped_item_any_tag('slot.weapon.mainhand', 'minecraft:is_armor') ? 1 : 0;",

                "v.genfx_hsword = q.equipped_item_any_tag('slot.weapon.mainhand', 'minecraft:is_sword') ? 1 : 0;",
                
                "v.genfx_hpickaxe = q.equipped_item_any_tag('slot.weapon.mainhand', 'minecraft:is_pickaxe') ? 1 : 0;",
                
                "v.genfx_hprojectile = q.get_equipped_item_name == ('snowball') || q.get_equipped_item_name == ('egg') || q.get_equipped_item_name == ('ender_pearl') ? 1 : 0;",
                
                "v.genfx_hthrowers = q.get_equipped_item_name == ('bow') || q.get_equipped_item_name == ('crossbow') || q.get_equipped_item_name == ('trident') ? 1 : 0;",
                
                "v.genfx_hnone = q.get_equipped_item_name == '' ? 1 : 0;",

                "v.genfx_hothers = (!v.genfx_hpickaxe && !v.genfx_hprojectile) && (!v.genfx_hsword && !v.genfx_hnone && !v.genfx_harmor) ? 1 : 0;",

                "v.genfx_standby = q.ground_speed > 0 || v.genfx_hprojectile || v.genfx_hpickaxe || v.genfx_hthrowers ? 1 : 0;",


                "variable.helmet_layer_visible = !query.has_head_gear;",
                "variable.leg_layer_visible = 1.0;",
                "variable.boot_layer_visible = 1.0;",
                "variable.chest_layer_visible = 1.0;",
                "variable.attack_body_rot_y = Math.sin(360*Math.sqrt(variable.attack_time)) * 5.0;",
                "variable.tcos0 = (math.cos(query.modified_distance_moved * 38.17) * query.modified_move_speed / variable.gliding_speed_value) * 57.3;",
                "variable.first_person_rotation_factor = math.sin((1 - variable.attack_time) * 180.0);",
                "variable.hand_bob = query.life_time < 0.01 ? 0.0 : variable.hand_bob + ((query.is_on_ground && query.is_alive ? math.clamp(math.sqrt(math.pow(query.position_delta(0), 2.0) + math.pow(query.position_delta(2), 2.0)), 0.0, 0.1) : 0.0) - variable.hand_bob) * 0.02;",
                "variable.map_angle = math.clamp(1 - variable.player_x_rotation / 45.1, 0.0, 1.0);",
                "variable.item_use_normalized = query.main_hand_item_use_duration / query.main_hand_item_max_duration;"
            ],
            "animate": [

                "dynamic_crosshair",
                "crosshair_position_fix",
                {
                    "spawning": "q.life_time < 0.9"
                },
                "afk_controller",
                "combo",
                "scripts"
            ]
        },
        //"particle_effects": { "sname": "identifier" },
        "sound_effects": { 
            "combo_coin_sfx": "generatefx.sound_effects.player_combo"
        },
        "materials": {
            "default": "entity_alphatest",
            "cape": "entity_alphatest",
            "animated": "player_animated",
            "spectator": "player_spectator",
            "crosshair": "entity"
        },
        "textures": {
            "default": "textures/entity/steve",
            "cape": "textures/entity/cape_invisible",
            "crosshair": "images/models/crosshair",
            "crosshair_red": "images/models/crosshair_red"
        },
        "geometry": {
            "default": "geometry.humanoid.custom",
            "cape": "geometry.cape",
            "crosshair": "geometry.sg_crosshair"
        },
        "render_controllers": [
            {
                "controller.render.player.first_person_spectator": "variable.is_first_person && query.is_spectator"
            },
            {
                "controller.render.player.third_person_spectator": "!variable.is_first_person && !variable.map_face_icon && query.is_spectator"
            },
            {
                "controller.render.player.first_person": "variable.is_first_person && !query.is_spectator"
            },
            {
                "controller.render.player.third_person": "!variable.is_first_person && !variable.map_face_icon && !query.is_spectator"
            },
            {
                "controller.render.player.map": "variable.map_face_icon"
            },
            "controller.render.player_combo",
            {
                "controller.render.sg_crosshair": "!q.is_in_ui && !v.is_paperdoll && v.is_first_person"
            }
        ],
        "min_engine_version": "1.10.0",
        "enable_attachables": true
        }
    }
}
